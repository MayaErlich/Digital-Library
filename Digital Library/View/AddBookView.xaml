<UserControl x:Class="Digital_Library.AddBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600">

    <StackPanel Margin="20">
        <TextBlock Text="Title:"/>
        <TextBox x:Name="txtTitle" Width="200"/>

        <TextBlock Text="Author:"/>
        <TextBox x:Name="txtAuthor" Width="200"/>

        <TextBlock Text="Length:"/>
        <TextBox x:Name="txtLength" Width="200"/>

        <TextBlock Text="Select Genre:" FontSize="14" Margin="0,10,0,5"/>
        <ComboBox x:Name="cbGenre" Width="200" Height="30"/>

        <Button Content="Add Book" Click="btnAddBook_Click" Width="100" Margin="10"/>
    </StackPanel>
</UserControl>
