<Window x:Class="Digital_Library.InsightsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insights" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" Text="Library Insights" Margin="0,0,0,20"/>

            <!-- Example Data -->
            <TextBlock Text="Total Number of Books:" FontSize="16"/>
            <TextBlock x:Name="TotalBooksText" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Average Book Length:" FontSize="16"/>
            <TextBlock x:Name="AvgBookLengthText" FontSize="14" Margin="0,0,0,10"/>

            <Button Content="Close" Width="100" Height="30" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
