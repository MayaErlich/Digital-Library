<Page x:Class="Digital_Library.InsightsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Digital_Library"
      Title="InsightsPage"
      Background="#40E0D0">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <TextBlock Text="Library Insights" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       TextAlignment="Center"/>

            <TextBlock Text="Average Pages:" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="AvgPagesText" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <TextBlock Text="Favorite Genre:" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="FavGenreText" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <Button Content="Back"
                    Width="100"
                    Height="30"
                    Click="BackButton_Click"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
